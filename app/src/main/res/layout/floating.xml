<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4D8BC34A"
    android:orientation="horizontal">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/meminfo" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        android:layout_marginStart="3dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:id="@+id/tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_store"
        android:id="@+id/tv_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_mem"
        android:id="@+id/tv_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_cpu"
        android:id="@+id/tv_traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />

    <Button
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_traffic"
        app:layout_constraintEnd_toStartOf="@id/btn_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_toggle_wifi"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/image_padding_small"
        android:textColor="@color/black"
        android:background="@drawable/float_button" />

    <Button
        app:layout_constraintStart_toEndOf="@id/btn_toggle_wifi"
        app:layout_constraintTop_toTopOf="@id/btn_toggle_wifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_stop"
        android:text="@string/stop_test"
        android:textSize="12sp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:background="@drawable/float_button" />
</android.support.constraint.ConstraintLayout>